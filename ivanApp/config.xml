<?xml version='1.0' encoding='utf-8'?>
<widget id="org.ivanApp" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>ivanApp</name>
    <description>
       Es mi primer app
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Ivan Feliciano
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
      <allow-intent href="market:*" />
      <splash src="www/img/dogue.png" density="land-hdpi"/>
      <splash src="www/img/dogue.png" density="land-ldpi"/>
      <splash src="www/img/dogue.png" density="land-mdpi"/>
      <splash src="www/img/dogue.png" density="land-xhdpi"/>
      <splash src="www/img/dogue.png" density="port-hdpi"/>
      <splash src="www/img/dogue.png" density="port-ldpi"/>
      <splash src="www/img/dogue.png" density="port-mdpi"/>
      <splash src="www/img/dogue.png" density="port-xhdpi"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <icon src="www/img/dogue.png"/>
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="SplashMaintainAspectRatio" value="true|false" />
    <preference name="SplashShowOnlyFirstTime" value="true|false" />
</widget>
